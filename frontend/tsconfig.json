{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@assets": ["src/assets/*"],
      "@components": ["src/components/*"],
      "@navigation": ["src/navigation/*"],
      "@screens": ["src/screens/*"],
      "@types": ["src/types/*"],
      "@utils": ["src/utils/*"],
      "@translations": ["src/translations/*"]
    }
  },
}
